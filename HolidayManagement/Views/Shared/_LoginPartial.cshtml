@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("HR"))
            {
                <li class="nav-item">
                     <a>HR User</a>
                </li>

                <li class="nav-item">
                    <a asp-area="" asp-controller="Staffs" asp-action="Index">Staff Options</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="HolidayTypes" asp-action="Index">Types of holidays</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Holidays" asp-action="Index">Holiday management</a>
                </li>
            }

            if (User.IsInRole("Operational"))
            {
                <li class="nav-item">
                     <a>Operational User</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Requests" asp-action="Index">Leave request</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Holidays" asp-action="Index">Holidays</a>
                </li>
            }

            if (User.IsInRole("Management"))
            {
                <li class="nav-item">
                     <a>Management User</a>
                 </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Requests" asp-action="Index2">Answer the request</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Staffs" asp-action="Index2">Staff Leave</a>
                </li>
            }

            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                    <button id="logout" type="submit" class="button button1">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>

            <li class="nav-item">
                <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }

    </ul>
